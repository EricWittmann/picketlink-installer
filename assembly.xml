<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>PicketLinkInstaller</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <filtered>true</filtered>
            <source>scripts/installer.properties</source>
            <destName>installer.properties</destName>
            <outputDirectory>${installer.root.dir}</outputDirectory>
        </file>
        <file>
            <source>scripts/build.xml</source>
            <destName>build.xml</destName>
            <outputDirectory>${installer.root.dir}/</outputDirectory>
        </file>
        <file>
            <source>xslt/addExtension.xslt</source>
            <outputDirectory>${installer.root.dir}/config/xslt</outputDirectory>
        </file>
        <file>
            <source>xslt/addPicketLinkLogging.xslt</source>
            <outputDirectory>${installer.root.dir}/config/xslt</outputDirectory>
        </file>
        <file>
            <source>xslt/addSecurityDomain.xslt</source>
            <outputDirectory>${installer.root.dir}/config/xslt</outputDirectory>
        </file>
        <file>
            <source>xslt/addSubsystem.xslt</source>
            <outputDirectory>${installer.root.dir}/config/xslt</outputDirectory>
        </file>
        <file>
            <source>xslt/changePicketLinkModule.xslt</source>
            <outputDirectory>${installer.root.dir}/config/xslt</outputDirectory>
        </file>
        <file>
            <source>xslt/configureConsole.xslt</source>
            <outputDirectory>${installer.root.dir}/config/xslt</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.picketlink:picketlink-core</include>
            </includes>
            <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
            <outputFileNameMapping>picketlink-core-${picketlink.version}.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.picketlink.distribution:picketlink-jbas7</include>
            </includes>
            <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
            <outputFileNameMapping>picketlink-jbas7-${picketlink.version}.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.picketlink:picketlink-as7-extension</include>
            </includes>
            <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
            <outputFileNameMapping>picketlink-as7-extension-${picketlink.subsystem.version}.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.picketlink.quickstarts:picketlink-quickstarts</include>
            </includes>
            <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
            <outputFileNameMapping>picketlink-quickstarts-${picketlink.version}-webapps-jboss-as7.zip</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>org.picketlink:picketlink-console</include>
            </includes>
            <outputDirectory>${installer.root.dir}/config/lib</outputDirectory>
            <outputFileNameMapping>picketlink-console-${picketlink.console.version}.war</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

</assembly>